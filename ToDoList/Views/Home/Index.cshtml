        <table class="table">
            <thead>
                <tr>
                    <th>Задачи</th>
                    <th>Статус</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Создать таблицу</td>
                    <td>Выполнено</td>
                    <td><input type="checkbox" class="chkbx"></td>
                </tr>
                <tr>
                    <td>Создать столбец</td>
                    <td>Выполнено</td>
                    <td><input type="checkbox" class="chkbx"></td>
                </tr>
                <tr>
                    <td>Ещё столбец</td>
                    <td>Выполнено</td>
                    <td><input type="checkbox" class="chkbx"></td>
                </tr>
                <tr>
                    <td>Ещё</td>
                    <td>Выполнено</td>
                    <td><input type="checkbox" class="chkbx"></td>
                </tr>
                <tr>
                    <td>И ещё</td>
                    <td>Выполнено</td>
                    <td><input type="checkbox" class="chkbx"></td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
