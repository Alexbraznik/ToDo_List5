@{
    ViewBag.Title = "Список задач";
}

<head>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</head>

<body>
    <script>
        $(document).ready(function () {
            $('.chkbx').on('change', function () {
                if ($(this).is(':checked'))
                    console.log('Выбран');
                else
                    console.log('Не выбран');
            });
        });
    </script>


